@using PortfolioSite.Models
@model List<Repo>

<h1>Projects</h1>
<p>Here are some of my most poular GitHub repos:</p>

<div class="project-panels">
  @foreach (Repo repo in Model)
  {
    <a href="@repo.Html_Url" target="_blank">
      <div class="project-panel">
        <p class="project-name">@repo.Name</p>
        <p class="project-language">Language: @repo.Language</p>
        <p class="project-stars">Stars: @repo.Stargazers_Count</p>
        <p class="project-last-update">Last Updated: @repo.Updated_At.ToString("yyyy-MM-dd")</p>
        <p class="project-link">Click for more info</p>
      </div>
    </a>
  }
</div>