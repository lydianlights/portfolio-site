<div class="admin-bar">
  @if (User.Identity.IsAuthenticated)
  {
    <p>Logged in as @User.Identity.Name</p>
    <a href=@Url.Action("Add", "Post")>Compose new blog post</a>
    @using (Html.BeginForm("LogOff", "Account"))
    {
      <input type="submit" class="btn-to-text" value="Log out" />
    }
  }
</div>